rules_version = '2';

// DEVELOPMENT ONLY - Permissive rules for testing
// Replace with production rules (storage.rules) before deploying to production

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to read all files
    match /{allPaths=**} {
      allow read: true;
    }
    
    // TEMPORARY: Allow all authenticated users to upload (for testing)
    // This allows you to test product uploads without admin role verification
    match /products/{imageId} {
      allow read: true;
      allow write: if request.auth != null;  // Any authenticated user can upload
    }
    
    match /blogs/{imageId} {
      allow read: true;
      allow write: if request.auth != null;
    }
    
    match /profiles/{userId}/{imageId} {
      allow read: true;
      allow write: if request.auth != null;
    }
  }
}
